@using Services.DTOs.AdminPanel.Course.CourseGroup;
@model AddSubGroupDto
@{
    ViewData["Title"] = "افزودن زیرگروه";
}


<div class="w-full px-6 py-6 mx-auto">
    <div class="flex flex-wrap -mx-3">
        <div class="flex-none w-full max-w-full px-3">
            <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 border-transparent border-solid shadow-xl dark:bg-slate-850 dark:shadow-dark-xl rounded-2xl bg-clip-border">
                <div class="p-6 pb-0 mb-0 border-b-0 border-b-solid rounded-t-2xl border-b-transparent">
                    <h6 class="dark:text-white">@ViewData["Title"]</h6>
                </div>
                <div class="flex-auto px-0 pt-0 pb-2">
                    <div class="header-options">
                        <a class="px-8 py-2 text-xs font-bold leading-normal text-center text-white align-middle transition-all ease-in bg-blue-500 border-0 rounded-lg shadow-md select-none bg-150 bg-x-25 hover:shadow-xs hover:-translate-y-px" asp-controller="ManageCourseGroups" asp-action="ShowGroups">مدیریت گروه ها</a>
                        <button id="back-page" class="px-8 py-2 text-xs font-bold leading-normal text-center text-white align-middle transition-all ease-in bg-blue-500 border-0 rounded-lg shadow-md select-none bg-150 bg-x-25 hover:shadow-xs hover:-translate-y-px">مدیریت زیرگروه ها</button>
                    </div>
                    <div class="py-2 px-1 overflow-x-auto ps">
                        <form asp-controller="ManageCourseGroups" asp-action="AddSubGroup" method="post" id="form" class="grid grid-cols-1 gap-6 text-sm w-full sm:w-11/12">
                            @Html.AntiForgeryToken()
                            <div>
                                <div id="profile-dashbord" class="form-control text-gray-700 my-4 mx-2">
                                    <label class="cursor-text">
                                        <i class="fa fa-user pl-[6px] text-gray-400"></i>
                                        عنوان زیرگروه :
                                    </label>
                                    <input type="text" asp-for="Title" id="title" data-max-chars="50" class="w-full py-2 px-4 mt-2 bg-slate-100 border focus:bg-sky-50 focus:border-gray-400 focus:shadow-md transition-all duration-300 rounded-lg outline-none">
                                    <span asp-validation-for="Title" class="block text-xs sm:font-semibold text-red-600 relative right-1 mt-2"></span>
                                </div>
                                <div id="profile-dashbord" class="form-control text-gray-700 my-4 mx-2">
                                    <label class="cursor-text">
                                        <i class="fa fa-user pl-[6px] text-gray-400"></i>
                                        انتخاب گروه :
                                    </label><br/>
                                    @Html.DropDownListFor(g => g.ParentId,Model.GroupList,
                                    "---- انتخاب کنید ----" , new{@class = "w-full sm:w-1/2 md:w-1/3 h-10 text-sm my-2 pr-2 outline-none text-black bg-slate-100 rounded-lg shadow-sm shadow-slate-400 drop-shadow-md border border-slate-200"})
                                    <span asp-validation-for="ParentId" class="block text-xs sm:font-semibold text-red-600 relative right-1 mt-2"></span>
                                </div>
                            </div>
                            <div class="grid sm:grid-cols-2 mb-4 mx-2">
                                <button type="submit" class="bg-green-500 border shadow-lg border-green-600 px-4 h-10 text-slate-100 rounded-lg hover:bg-green-600 transition-colors duration-300">افزودن زیرگروه</button>
                            </div>
                        </form>
                        <div class="ps__rail-x" style="left: 0px; bottom: 0px;"><div class="ps__thumb-x" tabindex="0" style="left: 0px; width: 0px;"></div></div><div class="ps__rail-y" style="top: 0px; right: 0px;"><div class="ps__thumb-y" tabindex="0" style="top: 0px; height: 0px;"></div></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script asp-append-version="true" src="/AdminStyles/js/ManageCourseGroups/addOrEditCourseGroups.js"></script>
}