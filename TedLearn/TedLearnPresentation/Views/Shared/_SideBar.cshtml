@using TedLearnPresentation.ViewComponents.CourseGroupComponents;
    <!-- Responsive Navbar -->
<!-- Bg Black -->
<div id="BgNavBar-Header" class="closeBgNav z-[1002] overflow-hidden md:hidden transition-opacity duration-1000 w-full h-full fixed bg-black opacity-60 top-0 right-0"></div>
<!-- End Bg Black -->

<aside id="NavBar-Header" class="closeNav z-[1004] md:hidden overflow-scroll overflow-x-hidden fixed transition-transform duration-1000 top-0 w-10/12 sm:w-4/5 h-screen bg-indigo-700">
    <!-- Close Navbar -->
    <div id="closeNavBar" class="absolute left-10 top-3 text-3xl sm:text-4xl h-[2.15rem] cursor-pointer">
        <span class="text-red-400 fixed transition-colors duration-300 hover:text-red-500"><i class="fa fa-close" aria-hidden="true"></i></span>
    </div>
    <!-- End Close Navbar -->
    <!-- Logo -->
    <div class="w-ful h-1/3 flex justify-center items-center">
        <a href="/">
            <img class="w-24 sm:w-28" src="/images/logo.png" alt="Logo Image">
        </a>
    </div>
    <!-- End Logo -->
    <!-- Search Box -->
    <div class="w-full h-12">
        <form action="/Home/Courses" class="flex text-xs sm:text-sm w-11/12 justify-center absolute right-5 top-[30%]">
            <input type="text" name="filterByCourseTitle" id="autoFilterMobile" class="w-full outline-none bg-slate-100 h-10 rounded-xl px-4 transition-all duration-300 focus:bg-slate-200 focus:placeholder-slate-800 focus:shadow-slate-600" placeholder="چی میخوای یاد بگیری؟">
            <button type="submit" class="relative text-sm left-7 mt-[6px] text-slate-400 hover:text-blue-700 hover:translate-x-1 transition-all duration-500">
                <i class="fi fi-rr-search"></i>
            </button>
        </form>
    </div>
    <!-- End Search Box -->
    <!-- Course Menu -->
    <div class="text-sm sm:text-base w-full pr-5 text-slate-50 my-6">
        <!-- Header -->
        <div class="w-full flex-row justify-center mb-4">
            <div class="w-full mb-4">
                <h1 class="text-base sm:text-lg text-sky-400">آموزش ها</h1>
            </div>
            <div class="w-11/12 h-[1px] sm:h-[2px] bg-gray-400">
            </div>
        </div>
        <!-- End Header -->
        <!-- Link -->
        @await Component.InvokeAsync(typeof(CourseGroupViewComponent) , "navbar-mobile")
        <!-- End Link -->
    </div>
    <!-- End Course Menu -->
    <!-- Access Menu -->
    <div class="text-sm sm:text-base h-1/3 w-full pr-5 text-slate-50">
        <!-- Header -->
        <div class="w-full flex-row justify-center mb-4">
            <div class="w-full mb-4">
                <h1 class="text-base sm:text-lg text-sky-400">منوی دسترسی</h1>
            </div>
            <div class="w-11/12 h-[1px] sm:h-[2px] bg-gray-400">
            </div>
        </div>
        <!-- End Header -->
        <!-- Link -->
        <nav class="leading-7 marker:text-gray-400 mr-4">
            <ul class="list-disc">
                <li><a class="hover:text-sky-400 transition-colors duration-300" href="/Home/Courses">دوره ها</a></li>
                <li><a class="hover:text-sky-400 transition-colors duration-300" href="/Home/Teachers">مدرسین</a></li>
                <li><a class="hover:text-sky-400 transition-colors duration-300" href="#">درباره ما</a></li>
                <li><a class="hover:text-sky-400 transition-colors duration-300" href="#">تماس با ما</a></li>
            </ul>
        </nav>
        <!-- End Link -->
    </div>
    <!-- End Access Menu -->
</aside>
<!-- End Responsive Navbar -->
<script src="/js/jquery-3.6.0.min.js"></script>
<script src="/js/jquery-ui/jquery-ui.min.js"></script>
<script type="text/javascript">
    $(document).ready(function() {
        $("#autoFilterMobile").autocomplete({
            source: 'api/courseapi/Search'
        });
    });
</script>